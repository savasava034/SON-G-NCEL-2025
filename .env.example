# ARISTO Configuration
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=True
PORT=5000

# Database
DATABASE_URL=sqlite:///aristo.db

# ElasticSearch Configuration (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=aristo_quran

# AI Integration (Optional)
# Get keys from: https://platform.openai.com/ and https://console.anthropic.com/
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# JWT Security
JWT_SECRET_KEY=change-this-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Cache Settings
CACHE_TIMEOUT=3600

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour
